<Page x:Class="AutoCalculatZP.Menu_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoCalculatZP"
      mc:Ignorable="d" 
      Title="Menu_Page" Background="White" Width="1100" Height="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="100" Margin="15" VerticalAlignment="Top" Width="100" Source="picture/logo.png"/>
        <Button Grid.Column="2" Grid.Row="0" Margin="10,15,210,214" Content="Поиск" FontSize="24" Background="#FF04A0FF"  Foreground="#FF37474F" />
        <TextBox  Grid.ColumnSpan="2" Margin="350 15 2 214"  BorderBrush="#FF04A0FF" />
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>

</Page>

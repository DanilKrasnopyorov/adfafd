<Window x:Class="QualityLeGang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QualityLeGang"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1020">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="DGHeader" Grid.Column="1" Grid.Row="0" Background="#B175EE">
            <Grid x:Name="DGIcon" Background="#B175EE" Width="70" HorizontalAlignment="Left" Margin="20 0 0 0">
            <Image Source="Resources/getlow.png" MouseDown="Image_MouseDown" HorizontalAlignment="Left"/>
            </Grid>
            <TextBlock Text="Company Of Sales" HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
        </Grid>
       
        <Frame x:Name="MainFrame" Grid.Row="1" Grid.RowSpan="2"  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
